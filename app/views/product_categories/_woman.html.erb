<div class="col-md-6">
    <div class="hovereffect">
        <%= link_to '#' do %>
            <%= image_tag('womannew.jpg', class:"img-responsive") %>  
            <span class="text-col-md-6"><%= ProductCategory.first.name %> </span>     
        <% end %>
        <div class="overlay">
            <a class="info" href="#" data-toggle="modal" data-target="#myModal">Открыть</a>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Одежда и аксессуары для женщин</h4>
                    </div>
                    <div class="modal-body">
                        <ul>
                            <% ProductSubCategory.where(product_category_id:1).each do | cat |%>
                                <li class="modal-window-category btn btn-default"> <%= cat.name %></li> 
                            <% end %>
                        </ul>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>