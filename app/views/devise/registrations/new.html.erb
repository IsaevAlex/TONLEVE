
<div class="row">
  <div class="col-xs-3 col-xs-offset-2 col-md-6 col-md-offset-5">
      <h2 class="title">Регистрация</h2>
      <h4 style="color:#3c3e50;">Для для продолжения работы с нашим сервисом вам необходимо зарегистрироваться</h4><br>    
  </div> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true } )do |f| %>
          <%= devise_error_messages! %>  
      <div class="col-md-10 col-md-offset-1 content">
          <div class="col-md-8 col-md-offset-2">
            
             <div class="form-group">
                    <%= f.text_field :name, :placeholder => "Фамилия и имя или же название организации", autofocus: true, class:"form-control" %>
              </div>
              <div class="form-group">
                    <%= f.email_field :email, :placeholder => "Эл.адрес", autofocus: true, class:"form-control" %>
              </div>
              <div class="form-group">
                    <%= f.password_field :password, :placeholder => 'Пароль', class:"form-control form-control-tag" %>
              </div>
              <div class="form-group">
                    <%= f.password_field :password_confirmation, :placeholder => "Подтверждение пароля", autocomplete: "on", class:"form-control" %>
              </div><br>

              <div class="form-group">
                  <%= f.file_field :avatar, :placeholder => "Загрузите изображение", class:"form-control" %>
              </div>
             
              <div class="col-md-offset-4">
                  <%= f.submit "Зарегистрироваться", class: "btn btn-primary " %>
              </div>
          <% end %>
       
          <%= render "devise/shared/links" %>
           </div>
        </div>
</div>





  
