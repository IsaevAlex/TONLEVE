$("ul.errors").html("")
<% if @message.errors.any? %>
  <% @message.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  <% publish_to "/messages/new" do %>
  	  $('#message').html("<%= j render @conversation.messages %>");
      $("#flash").html('<%= escape_javascript(render :partial => "layouts/messages", :locals => {:message => @message}) %>');
  <% end %>	
<% end %>