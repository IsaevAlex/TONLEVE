<div class="panel panel-white post panel-shadow">
	<div class="post-heading">
         <div class="pull-left image">
         	<%= link_to image_tag(product_comment.user.avatar.url, class:"img-rounded avatar"), product_comment.user %>
         </div>
         <div class="pull-left meta">
         	<b><%= link_to product_comment.user.name %></b>
                            добавила отзыв
            <h6 class="text-muted time"><%= product_comment.created_at %></h6>
         </div>
         <% if can? :destroy, product_comment %>
               <%= link_to "Удалить", [product_comment.product, product_comment], method: :delete, :remote => true,  data: { confirm: "Вы уверены?" }, class:"btn btn-danger btn-content" %>
         <% end %>
    </div> 
    <div class="post-description">
    		<h4><%= product_comment.comment %></h4>
    </div>
</div>

